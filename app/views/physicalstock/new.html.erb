<a href="/stockworkorders"><button class="btn btn-primary">Back</button></a><br/><br/>
<% if notice %>
	<div class="alert alert-success alert-dismissible" role="alert">
  	 <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <% alert.each do |e,v| %>
    	<% if e == "locno" %>
    		LOC Number <%= v %><br>
    	<% else %>
    		<%=  "#{e} #{v}" %><br>
    	<% end %>
    <% end %>
  </div>
<% end %>
<%= simple_form_for @stockworkorder, url: {:action => "create", :method => "post"}, :html => {:class => "form-horizontal", :id => @stockworkorder.id } do |f| %>
	<div class="row">
		<div class="col-sm-4">
			<%=f.input :locno, :label => false,required: true, :placeholder => "LOC Number" %>
		</div>
		<div class="col-sm-4">
			<%=f.input :erpno, :label => false, :placeholder => "ERP Numner" %>
		</div>
		<div class="col-sm-4">
			<%=f.input :projectname, :label => false, :placeholder => "Project Name" %>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-4">
			<%=f.input :projectvalue, :label => false, :placeholder => "Project Value" %>
		</div>
		<div class="col-sm-4">
			<%=f.input :branch, :label => false, :placeholder => "Branch" %>
		</div>
		<div class="col-sm-4">
			<%=f.input :gmname, :label => false, :placeholder => "GM Name" %>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-4">
			<%=f.input :projectincharge, :label => false, :placeholder => "Project Incharge" %>
		</div>
		<div class="col-sm-4">
			<%=f.input :billingeng, :label => false, :placeholder => "Billing Engineer" %>
		</div>
	</div>
		<%= f.submit "Submit", :class => "btn btn-primary" %>	
<% end %>